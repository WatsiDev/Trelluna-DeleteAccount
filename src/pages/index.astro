---
import Layout from '../layouts/Layout.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<body class="bg-gray-100 antialiased">

    <!-- Contenedor principal -->
    <div class="min-h-screen flex items-center justify-center p-4">

        <!-- Contenedor del formulario -->
        <div class="w-full max-w-md">
            <!-- Tarjeta principal -->
            <div class="bg-white p-6 sm:p-8 rounded-xl shadow-lg">
                
                <!-- Encabezado -->
                <div class="text-center">
                    <h1 class="text-2xl font-bold text-blue-600">Trelluna</h1>
                    <h2 class="text-xl font-semibold text-gray-800 mt-2">Eliminar tu Cuenta</h2>
                    <p class="text-sm text-gray-500 mt-1">Gestor de proyectos</p>
                </div>

                <!-- Advertencia de acción permanente -->
                <div class="p-4 bg-red-50 border border-red-200 rounded-lg my-6">
                    <h3 class="font-semibold text-red-800">Acción Permanente</h3>
                    <p class="text-sm text-red-700 mt-1">
                        Estás a punto de solicitar la eliminación permanente de tu cuenta de Trelluna y todos los datos asociados a ella (proyectos, tareas, equipos, etc.).
                    </p>
                    <p class="text-sm text-red-700 font-medium mt-2">
                        Esta acción no se puede deshacer.
                    </p>
                </div>

                <!-- 
                  Formulario de eliminación
                  Configurado para Netlify Forms.
                  Sin JS, Netlify gestionará el envío y la recarga de la página.
                -->
                <form class="space-y-4" name="delete-request" method="POST" data-netlify="true">
                    
                    <!-- Campo de Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                            Email de la cuenta
                        </label>
                        <input type="email" id="email" name="email" required
                               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                      focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                               placeholder="tu@email.com">
                    </div>
                    
                    <!-- Campo de Motivo (Opcional) -->
                    <div>
                        <label for="reason" class="block text-sm font-medium text-gray-700 mb-1">
                            Motivo de la eliminación (Opcional)
                        </label>
                        <textarea id="reason" name="reason" rows="3"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                         focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                  placeholder="Tus comentarios nos ayudan a mejorar..."></textarea>
                    </div>

                    <!-- Checkbox de confirmación -->
                    <div class="flex items-center">
                        <input type="checkbox" id="confirm" name="confirm" required
                               class="h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500">
                        <label for="confirm" class="ml-2 block text-sm text-gray-900">
                            Entiendo que esta acción es permanente y no se puede revertir.
                        </label>
                    </div>

                    <!-- Botón de envío -->
                    <div>
                        <button type="submit"
                                class="w-full bg-red-600 text-white font-semibold py-2.5 px-4 rounded-md
                                       hover:bg-red-700 focus:outline-none focus:ring-2 
                                       focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out">
                            Solicitar Eliminación Permanente
                        </button>
                    </div>
                </form>

            </div>
            
            <!-- Pie de página -->
            <p class="mt-6 text-center text-xs text-gray-500">
                &copy; 2025 Trelluna - Gestor de proyectos. Todos los derechos reservados.
            </p>
        </div>

        <!-- Los mensajes de éxito y error se eliminaron 
             ya que Netlify manejará la redirección -->

    </div>

    <!-- 
      SCRIPT DEL LADO DEL CLIENTE ELIMINADO
      Ya no se necesita JavaScript.
    -->

</body>
</Layout>


 <style>
      /* Aplicar la fuente Inter como fuente principal */
      body {
        font-family: 'Inter', sans-serif;
      }
      /* Estilo para el mensaje de error */
      #errorMessage {
        display: none; /* Oculto por defecto */
        color: #991b1b; /* text-red-800 */
        background-color: #fee2e2; /* bg-red-100 */
        border: 1px solid #fecaca; /* border-red-200 */
        padding: 0.75rem 1rem; /* p-3 p-4 */
        border-radius: 0.375rem; /* rounded-md */
        margin-top: 1rem; /* mt-4 */
        text-align: center;
        font-size: 0.875rem; /* text-sm */
      }
    </style>